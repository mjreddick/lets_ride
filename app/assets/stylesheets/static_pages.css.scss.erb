.event-box {
	background-color: white;
	color: black;
	cursor: pointer;
	text-align: left;
	height: 128px;
	margin-top: 10px;
	margin-bottom: 10px;
	border: 2px solid black;
	border-radius: 5px;
	overflow: hidden;
	max-width: 350px;

	p {
		margin: 0;
		font-size: 10px;
	}
}

#loading-spinner {
    display: none;
    width: 60px;
    height: 60px;
    margin: 125px auto;
    background-image: url(<%= image_path 'loading.gif' %>);
}

.large-event-image {
	margin: 0 auto;
}

.event-box-title {
	font-weight: bold;
	font-size: 12px;
}

#home-title {
	margin-top: 100px;
	margin-bottom: 25px;
}

